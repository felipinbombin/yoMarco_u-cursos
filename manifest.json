{
  "manifest_version": 2,

  "version": "1.0.0",
  "name": "yo marco!!!",
  "description": "Esta extensi√≥n crea un enlace en los mensajes de los foros de www.u-cursos.cl para ser guardados en un historial.",

  "background": {
    "page": "background.html"
  },

  "content_scripts": [{
      "matches": ["https://www.u-cursos.cl/*foro*"],
      "js": ["js/codigo_inyectar.js"],
      "run_at": "document_start"
    }
  ],

  "permissions": [
    "tabs", 
    "https://www.u-cursos.cl/*foro*"
  ],

  "browser_action": {
    "default_icon": "imagenes/icon.png",
    "default_popup": "principal.html"
  }
}